*
    padding: 0
    margin: 0

li
    list-style: none

a
    text-decoration: none
    color: #ffffff
    opacity: 0.6

.container
    width: 100%
    height: 100%
    overflow-y: auto
    .header
        position: fixed
        top: 0
        left: 0
        width: calc(100% - 270px)
        height: 80px
        line-height: 80px
        padding: 0 135px
        .h-left
            float: left
            color: #ffffff
            font-size: 18px
        .h-right
            float: right
            li
                float: left
                margin-left: 60px
                font-size: 15px
                &:first-child
                    margin-left: 0
                a.active
                    opacity: 1
    .main 
        #intro
            background-color: #4C4592
            height: 537px
            overflow: hidden
            padding: 175 135px 0
            .intro-left
                width: 340px
                height: 434px
                float: left
            .intro-right
                float: left
                margin-left: 100px
                width: calc(100% - 440px)

*
    padding: 0
    margin: 0
html, body
    font-size: 14px
li
    list-style: none

a
    text-decoration: none
    color: #ffffff
    opacity: 0.6

.container
    width: 100%
    height: 100%
    overflow-y: auto
    .header
        position: fixed
        top: 0
        left: 0
        width: calc(100% - 270px)
        height: 80px
        line-height: 80px
        padding: 0 135px
        .h-left
            float: left
            color: #ffffff
            font-size: 18px
        .h-right
            float: right
            li
                float: left
                margin-left: 60px
                font-size: 15px
                &:first-child
                    margin-left: 0
                a.active
                    opacity: 1
    .main
        #intro
            background-color: #4C4592
            height: 537px
            overflow: hidden
            padding: 175 135px 0
            .intro-left
                width: 340px
                height: 434px
                float: left
            .intro-right
                float: left
                margin-left: 100px
                width: calc(100% - 440px)
                .intro-text
                    color: rgba(#ffffff, .8)
                    line-height: 26px
                .download
                    margin-top: 45px
                    width: 160px
                    height: 50px
                    line-height: 50px
                    text-align: center
                    border-radius: 25px
                    background:linear-gradient(90deg,rgba(250,217,97,1) 0%,rgba(247,107,28,1) 100%)
                    color: #ffffff
                    cursor: pointer
            .module-title
                color: #ffffff
                text-align: left
                &:after
                    content: ''
                    position: absolute
                    width: 40px
                    height: 5px
                    bottom: 0
                    left: 0
                    margin-left: 0
                    background-color: #FFB400
            .sub-title
                color: rgba(#ffffff, .5)
                margin: 20px 0
                text-align: left
        #func-module
            padding: 100px 135px
            overflow: hidden
            .func-list
                margin-top: 80px
                display: flex
                .list-item
                    flex: 1
                    height: 251px
                    box-shadow:0px 4px 26px 0px rgba(0,0,0,0.08)
                    border-radius: 10px
                    margin-right: 30px
                    padding: 55px 25px 70px
                    text-align: center
                    &:last-child
                        margin-right: 0
                    .item-img
                        width: 118px
                        height: 118px
                        line-height: 118px
                        border-radius: 50%
                        background-color: #F2F2F2
                        margin: 0 auto
        .module-title
            font-size: 39px
            color: #424345
            position: relative
            height: 90px
            line-height: 90px
            text-align: center
            &:after
                content: ''
                position: absolute
                width: 40px
                height: 5px
                bottom: 0
                left: 50%
                margin-left: -20px
                background-color: #FFB400
        .sub-title
            color: #838383
            margin: 25px 0
            text-align: center

@media screen and (max-width:768px)
    .container
        .header
            display: none
